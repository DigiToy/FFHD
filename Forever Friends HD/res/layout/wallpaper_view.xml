<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99BBFF" >

    <ImageView
        android:id="@+id/wallPaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="@string/wallpaper_thumb"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/buttonSaveWall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/save_button"
        android:contentDescription="@string/button_sound_content" />

    <ImageButton
        android:id="@+id/buttonSetWall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/set_button"
        android:contentDescription="@string/button_sound_content" />

</RelativeLayout>